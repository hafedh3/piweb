{% extends 'Admin.html.twig' %}

{% block body %}
    <h1>Liste des Produits :</h1>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Data Table</strong>
                        </div>
                        <form action="#" method="post" enctype="#" class="table" >

                        <div class="card-body">

                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                <tr>


                                    <center>
                                        <button type="button" class="btn btn-primary"><a href="{{ path('produit_new') }}"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ajouter Produit</font></font></a></button>

                                    </center>

                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Catégorie Produit</th>
                                    <th>Quantité</th>
                                    <th>Prix</th>
                                    <th>Detaille</th>
                                    <th>Action</th>


                                </tr>
                                </thead>
                                {% for produit in produits %}
                                <tr>
                                    <td>{{ produit.idProduit }}</td>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.image }}</td>
                                    <td>{{ produit.description }}</td>
                                    <td>{{ produit.categorieProduit }}</td>
                                    <td>{{ produit.quantite }}</td>
                                    <td>{{ produit.prix }}</td>
                                    <td><a href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">Afficher</a></td>
                                    <td><a href="{{ path('produit_edit', { 'idProduit': produit.idProduit }) }}">Modifier/Supprimer</a></td>



                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        </form>

                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


{% endblock %}
